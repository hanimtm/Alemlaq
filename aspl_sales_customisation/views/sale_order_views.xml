<?xml version="1.0"?>
<odoo>
    <record id="sale_order_form_alemleq" model="ir.ui.view">
        <field name="name">sale.order.form.payment</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
             <xpath expr="//button[@name='action_quotation_send']" position="before">
                 <button name="%(aspl_sales_customisation.action_view_request_invoice_wizard)d" string="Invoice Request"
                        type="action" context="{'default_sale_order_id': active_id}"
                        attrs="{'invisible': ['|',('invoice_status', '!=', 'no'), ('state', '!=', 'sale')]}"/>
             </xpath>
             <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="mobile_no" widget="phone"/>
                <field name="e_mail" widget="email"/>
             </xpath>
             <xpath expr="//field[@name='payment_term_id']" position="after">
                 <field name="sales_type_id" required="True"/>
             </xpath>
        </field>
    </record>
</odoo>






